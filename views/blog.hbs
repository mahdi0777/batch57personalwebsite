<html lang="en"></html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/logo/css/nav.css" />
    <link rel="stylesheet" href="../assets/logo/css/blog.css" />
    
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary"
    style="background-color:black !important">
  <div class="container-fluid">
    <img
      src="../assets/logo/—Pngtree—cool red wings logo_7129340.png"
      class="navbar-logo"
      style="margin-right: 10px"
    />
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/"
          style="color: white;">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/blog"
          style="color: white;">Blog</a>
        </li>
      </ul>
      <!-- Login/Logout and Contact Buttons -->
      {{#if user}}
        <h1>Hello, {{user.name}}</h1>
        <a href="/logout" class="btn btn-warning" style="background-color: red; color: #fff; border-color: #000">Logout</a>
      {{else}}
        <a href="/register" class="btn btn-warning" style="background-color: red; color: #fff; border-color: #000">Register</a>
        <a href="/login" class="btn btn-warning" style="background-color: red; color: #fff; border-color: #000">Login</a>
      {{/if}}
      <a class="btn btn-warning" href="/contact" style="padding: 10px; background-color: red; color: #fff; border-color: #000">
        Contact
      </a>
    </div>
  </div>
</nav>
    <div class="blog-list-item">
            <div class="blog-image">
                {{#each blogs}}
                <img src="${blogs[index].image}" alt="" style="width:100%; height:auto;" />
            </div>
            <div class="blog-content">
                <div class="btn-group">
                    <button class="btn-edit">Edit Post</button>
                    <button class="btn-post">Delete Post</button>
                </div>
                <h1>
                    <a href="blog-detail.html" target="_blank"> {{title}}</a>
                </h1>
                <div class="detail-blog-content">
                    ${getFullTime(blogs[index].createdAt)} | Mahdi Hidayah
                </div>
                <p style="width: 100%;">
                  {{content}}
                </p>
                <p style="width: 100%;">Technologies: {{technologies}}</p>

                <div> 
                    <p style="width:100%">${getDistanceTime(blogs[index].createdAt)}</p>
                </div>
                <div>
                <p style="width: 100%">Waktu Postingan Dibuat: {{startDate}}</p>
                <p style="width: 100%">Waktu Habis Postingan: {{endDate}}</p>
                <div/>
            </div>
            {{/each}}
        </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/logo/js/blog.js"></script>
  </body>
</html>