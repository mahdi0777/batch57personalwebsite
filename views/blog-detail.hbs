<html></html>
  <head>
    <title>Creating Blog Page - detail</title>
    <style> *, body {
            margin : 0;
        }
        .hamburger-menu {
            display: none;
        }
        .active {
            display: block;
        }
        </style>
    <link
      rel="stylesheet"
      href="../assets/logo/css/nav.css"
    />
    <link
      rel="stylesheet"
      href="../assets/logo/css/blog.css"
    />
  </head>

  <body>
   <nav class="navbar">
      <ul class="navbar-ul">
        <div class="navbar-left">
          <li>
          <img src="../assets/logo/—Pngtree—cool red wings logo_7129340.png"
          class="navbar-logo" />
        </li>
       <li>
            <a href="/" class="navbar-link active"> Home </a>
          </li>
          <li>
            <a href="/blog" class="navbar-link"> Blog </a>
          </li>
          <li>
            <a href="/testimonial" class="navbar-link"> Testimonial </a>
          </li>
        </div>
        <div class="navbar-right">
          <li>
            <a href="/contact" class="navbar-contact-btn"> Contact </a>
          </li>
          <button id="hamburger-button" onclick="toggleHamburger()">
            <i class="fa-solid fa-bars fa-2x"></i>
          </button>
        </div>
      </ul>
    </nav>
    <div class="hamburger-container hide">
      <a href="index" class="hamburger-nav-link hamburger-active">
        Home
      </a>
      <a href="blog" class="hamburger-nav-link"> Blog </a>
      <a href="testimonial" class="hamburger-nav-link"> Testimonial </a>
      <a href="contact" class="hamburger-nav-link"> Contact </a>
    </div>


    <div class="blog-detail">
      <div class="blog-detail-container">
        <h1>{{data.title}}</h1>
        <div class="author">{{data.createdAt}} | Mahdi Hidayah</div>
        <img
          src="{{data.image}}"
          alt="detail"
        />
        <p>
         {{data.content}}
        </p>
      </div>
    </div>

    <script src="../assets/logo/js/nav.js"></script>
  </body>
</html>